<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/null"
      fx:controller="com.example.konyvtarasztali.KonyvtarController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Button onAction="#torlesClick" text="Törlés"/>
    <TableView fx:id="konyvek" prefHeight="200.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="title" minWidth="100.0" prefWidth="200.0" text="Cím"/>
            <TableColumn fx:id="author" minWidth="100.0" prefWidth="150.0" text="Szerző"/>
            <TableColumn fx:id="publish_year" minWidth="75.0" prefWidth="75.0" text="Kiadás éve"/>
            <TableColumn fx:id="page_count" minWidth="75.0" prefWidth="75.0" text="Oldalszám"/>
        </columns>
    </TableView>
</VBox>
